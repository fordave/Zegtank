<Window x:Class="ImageChange.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageChange"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="转换" HorizontalAlignment="Center" Padding="5" Click="Button_Click"></Button>
            <Image x:Name="image" Width="400" Height="400" Margin="9"></Image>
        </StackPanel>
    </Grid>
</Window>
